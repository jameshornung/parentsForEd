<div>
  {{#if user}}
    <div class="row">
      <div class="col s12 black white-text">
        <p class="loginText">Hi, {{user.username}} <a href="/logout"> logout</a></p>
      </div>
    </div>
    <div class="row">
      <div class="col m4 hide-on-med-and-down">
        <h5 class="center">Add Administrator</h5>
      </div>
      <div class="s12 m8">
        <h4 class="center">Member List</h4>
      </div>
    </div>
    <div class="row adminFunctions">
      <div class="col s12 m4 addAdmin hide-on-med-and-down">
        <form action="/register" method="post" id="adminForm">
            <label class="">Username:</label>
            <input type="text" name="username" id="adminName" required="true"/><br/>
            <label>Password:</label>
            <input type="password" name="password" id="adminPassword" required="true"/>
            <!-- <input type="hidden" value="/" name="pathName"> -->
            <input type="submit" value="Submit"/>
        </form>
      </div> 
      <div class="col s12 m8">
          <div class="memberDiv">
            <table class="striped memberList">
              <th>Name</th>
              <th>E-Mail</th>
              {{#each memberList }}
                <tr>
                  <td>{{ this.firstname }} {{ this.lastname }}</td>
                  <td>{{ this.email }}</td>
                </tr>
              {{/each}}
            </table>
          </div>
        </div>
  </div>
     
  {{^}}
    <div id="formHolder">
     <form id="adminLoginForm" action="/login" method="post">
          <label class="">Username:</label>
          <input type="text" name="username" required="true"/><br/>
          <label>Password:</label>
          <input type="password" name="password" required="true"/>
          <input type="hidden" value="/" name="pathName">
          <input type="submit" value="Submit"/>
      </form>
     
    </div> 
  {{/if}} 
</div>

<!-- FOOTER -->
  <footer class="page-footer light-blue">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="black-text" id="joinTitle">Join Our Mailing List</h5>
          <p class="black-text text-lighten-1">Please join our mailing list to receive important news and updates from Austin Parents for Public Education.  We will not clutter your inbox with unsolicited e-mails and we will never give or sell your e-mail address to a third party.  We will provide critical updates on ways you can be involved in the education of your child.</p>
          <form id="joinTheList" action="/members" method="post">
          	<p class="label">First Name:</p>
          	<input type="text" name="firstName" id="firstNameField" placeholder="First Name" required="true"><br>
          	<p class="label">Last Name:</p>
          	<input type="text" name="lastName" id="lastNameField" placeholder="Last Name" required="true"><br>
          	<p class="label">E-Mail:</p>
          	<input type="email" name="address" id="eMailField" placeholder="E-Mail" required="true"><br>
            <input type="hidden" value="/admin" name="pathName">
          	<input type="submit" name="submit" id="submitButton">
          </form>


        </div>
